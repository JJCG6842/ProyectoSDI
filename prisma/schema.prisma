generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String     @id @default(uuid())
  nombre    String
  password  String
  role      Role       @default(Almacenero)
  status    UserStatus @default(Habilitado)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Category {
  id            String        @id @default(uuid())
  name          String
  description   String
  createAt      DateTime      @default(now())
  updateAt      DateTime      @updatedAt
  subcategories Subcategory[]
  products      Products[]
  marcas        Marca[]
}

model Subcategory {
  id          String     @id @default(uuid())
  name        String
  description String
  categoryId  String
  products    Products[]
  createAt    DateTime   @default(now())
  updateAt    DateTime   @updatedAt
  category    Category   @relation(fields: [categoryId], references: [id])
}

model Marca {
  id          String     @id @default(uuid())
  name        String
  description String
  categoryId  String
  createAt    DateTime   @default(now())
  updateAt    DateTime   @updatedAt
  category    Category   @relation(fields: [categoryId], references: [id])
  products    Products[]
}

model Products {
  id            String        @id @default(uuid())
  image         String
  name          String
  description   String
  marcaId       String?
  quantity      Float         @default(0)
  price         Float
  status        ProductStatus @default(Outstock)
  state         ProductState  @default(Habilitado)
  model         String
  categoryId    String
  subcategoryId String
  storeId       String?
  entrances     EntranceDetalle[]
  salidas       SalidaDetalle[]
  category      Category      @relation(fields: [categoryId], references: [id])
  subcategory   Subcategory   @relation(fields: [subcategoryId], references: [id])
  marca         Marca?        @relation(fields: [marcaId], references: [id])
  createAt      DateTime      @default(now())
  updateAt      DateTime      @updatedAt
}

model Supplier {
  id          String     @id @default(uuid())
  name        String
  phone       Int
  description String
  entrances   Entrance[]
  salidas     Salida[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Cliente {
  id        String   @id @default(uuid())
  dni       Int
  name      String
  phone     Int
  salidas   Salida[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Entrance {
  id         String    @id @default(uuid())
  supplierId String?
  createdAt  DateTime  @default(now())
  detalles   EntranceDetalle[]
  supplier   Supplier? @relation(fields: [supplierId], references: [id])
}

model EntranceDetalle {
  id         String    @id @default(uuid())
  entranceId String
  productId  String
  quantity   Float
  price      Float
  total      Float

  product    Products  @relation(fields: [productId], references: [id])
  entrance   Entrance  @relation(fields: [entranceId], references: [id], onDelete: Cascade)
}

model Salida {
  id         String           @id @default(uuid())
  tipo       String          
  supplierId String?
  clienteId  String?
  createdAt  DateTime         @default(now())
  detalles   SalidaDetalle[]
  supplier   Supplier?        @relation(fields: [supplierId], references: [id])
  cliente    Cliente?         @relation(fields: [clienteId], references: [id])
}

model SalidaDetalle {
  id        String   @id @default(uuid())
  salidaId  String
  productId String
  quantity  Float
  price     Float
  total     Float
  product   Products @relation(fields: [productId], references: [id])
  salida    Salida   @relation(fields: [salidaId], references: [id], onDelete: Cascade)
}

enum ProductStatus {
  Instock
  Outstock
}

enum Role {
  Administrador
  Almacenero
}

enum UserStatus {
  Habilitado
  Deshabilitado
}

enum ProductState {
  Habilitado
  Deshabilitado
}
