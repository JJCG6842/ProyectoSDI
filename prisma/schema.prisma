generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(uuid())
  nombre    String
  password  String
  role      Role     @default(Almacenero)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id            String        @id @default(uuid())
  name          String
  description   String
  createAt      DateTime      @default(now())
  updateAt      DateTime      @updatedAt
  subcategories Subcategory[]
  products      Products[]
  marcas        Marca[]
}

model Subcategory {
  id          String     @id @default(uuid())
  name        String
  description String
  categoryId  String
  products    Products[]
  createAt    DateTime   @default(now())
  updateAt    DateTime   @updatedAt
  category    Category   @relation(fields: [categoryId], references: [id])
}

model Marca {
  id          String     @id @default(uuid())
  name        String
  description String
  categoryId  String
  createAt    DateTime   @default(now())
  updateAt    DateTime   @updatedAt
  category    Category   @relation(fields: [categoryId], references: [id])
  products    Products[]
}

model Products {
  id            String        @id @default(uuid())
  image         String
  name          String
  description   String
  marcaId       String?
  quantity      Float         @default(0)
  price         Float
  status        ProductStatus @default(Outstock)
  model         String
  categoryId    String
  subcategoryId String
  storeId       String?
  entrances     Entrance[]
  salidas       Salida[]
  category      Category      @relation(fields: [categoryId], references: [id])
  subcategory   Subcategory   @relation(fields: [subcategoryId], references: [id])
  marca         Marca?        @relation(fields: [marcaId], references: [id])
  createAt      DateTime      @default(now())
  updateAt      DateTime      @updatedAt
}

model Supplier {
  id          String     @id @default(uuid())
  name        String
  phone       Int
  description String
  entrances   Entrance[]
  salidas     Salida[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Entrance {
  id         String    @id @default(uuid())
  productId  String
  quantity   Float
  supplierId String?
  createdAt  DateTime  @default(now())
  product    Products  @relation(fields: [productId], references: [id])
  supplier   Supplier? @relation(fields: [supplierId], references: [id])
}

model Salida {
  id         String    @id @default(uuid())
  productId  String
  quantity   Float
  supplierId String?
  createdAt  DateTime  @default(now())
  product    Products  @relation(fields: [productId], references: [id])
  supplier   Supplier? @relation(fields: [supplierId], references: [id])
}

enum ProductStatus {
  Instock
  Outstock
}

enum Role {
  Administrador
  Almacenero
}
