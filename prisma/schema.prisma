generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String     @id @default(uuid())
  nombre    String
  lastname  String
  email     String
  dni       Int
  password  String
  salidas   Salida[]
  role      Role       @default(Almacenero)
  status    UserStatus @default(Habilitado)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  salidasDestino Salida[] @relation("DestinoSalida")
}

model Category {
  id            String        @id @default(uuid())
  name          String
  description   String
  createAt      DateTime      @default(now())
  updateAt      DateTime      @updatedAt
  subcategories Subcategory[]
  products      Products[]
  marcas        Marca[]
}

model Subcategory {
  id          String     @id @default(uuid())
  name        String
  description String
  categoryId  String
  products    Products[]
  createAt    DateTime   @default(now())
  updateAt    DateTime   @updatedAt
  category    Category   @relation(fields: [categoryId], references: [id])
}

model Marca {
  id          String     @id @default(uuid())
  name        String
  description String
  categoryId  String
  createAt    DateTime   @default(now())
  updateAt    DateTime   @updatedAt
  category    Category   @relation(fields: [categoryId], references: [id])
  products    Products[]
}

model Products {
  id            String            @id @default(uuid())
  image         String
  name          String
  description   String
  marcaId       String?
  quantity      Float             @default(0)
  status        ProductStatus     @default(Outstock)
  state         ProductState      @default(Habilitado)
  model         String
  categoryId    String
  subcategoryId String
  storeId       String?
  entrances     EntranceDetalle[]
  salidas       SalidaDetalle[]
  category      Category          @relation(fields: [categoryId], references: [id])
  subcategory   Subcategory       @relation(fields: [subcategoryId], references: [id])
  marca         Marca?            @relation(fields: [marcaId], references: [id])
  createAt      DateTime          @default(now())
  updateAt      DateTime          @updatedAt
}

model Supplier {
  id          String     @id @default(uuid())
  ruc         String 
  address     String
  name        String
  phone       Int
  description String
  entrances   Entrance[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Cliente {
  id        String     @id @default(uuid())
  dni       Int
  name      String
  phone     Int
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Entrance {
  id          String            @id @default(uuid())
  supplierId  String?
  createdAt   DateTime          @default(now())
  detalles    EntranceDetalle[]
  supplier    Supplier?         @relation(fields: [supplierId], references: [id],onDelete: Cascade)
}

model EntranceDetalle {
  id         String @id @default(uuid())
  entranceId String
  productId  String
  quantity   Float
  price      Float
  total      Float
  product  Products @relation(fields: [productId], references: [id])
  entrance Entrance @relation(fields: [entranceId], references: [id], onDelete: Cascade)
}

model Salida {
  id         String          @id @default(uuid())
  createdAt  DateTime        @default(now())
  detalles   SalidaDetalle[]
  userId     String
  destinoId  String?
  user       Users @relation(fields: [userId], references: [id], onDelete: Cascade)
  destino    Users? @relation("DestinoSalida", fields: [destinoId], references: [id])
}

model SalidaDetalle {
  id        String   @id @default(uuid())
  salidaId  String
  productId String
  quantity  Float
  product   Products @relation(fields: [productId], references: [id])
  salida    Salida   @relation(fields: [salidaId], references: [id], onDelete: Cascade)
}

enum ProductStatus {
  Instock
  Outstock
}

enum Role {
  Administrador
  Almacenero
}

enum UserStatus {
  Habilitado
  Deshabilitado
}

enum ProductState {
  Habilitado
  Deshabilitado
}